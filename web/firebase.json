{
    "hosting": {
        "public": "dist/public",
        "predeploy": "cpx \"src/public/**/*.*\" \"dist/public\" -C && cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C && next build 'src/app/'",
        "rewrites": [
            {
                "source": "**/**",
                "function": "next"
            }
        ]
    },
    "functions": {
        "source": "dist/functions",
        "predeploy": "babel 'src/functions' --out-dir 'dist/functions'"
    }
}
