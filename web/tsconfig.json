{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmit": false,
        "incremental": true
    },
    // "files": ["pages/exhibition/[slug].tsx"],
    "exclude": ["node_modules"],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "components/ScriptTag.js",
        "pages/index.js",
        "shared/*.ts",
        "components/App.js"
    ]
}
